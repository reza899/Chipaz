@model FoodIndexModel
@{ 
    Layout = "_Layout";
}

<h1>Food List</h1>

<hr />
<a class="btn btn-success" asp-action="create">Create new Food</a>
<div class="mt-2 mb-2">
    <form asp-action="Index" method="get" class="form-inline">
        <input type="text" value="@ViewData["search"]"  name="search" placeholder="Search" class="form-control" />
        <button type="submit" class="ml-1 btn btn-outline-info">Search</button>

       <select asp-for="Maden" asp-items="@Html.GetEnumSelectList<MadenType>()" class="form-control">
</select>
</form>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a class="btn btn-link" asp-action="Index" asp-route-order="Id" asp-route-search="@ViewData["search"]" asp-route-sort="@ViewData["sort"]"> Id</a>
            </th>
            <th>
              <a asp-action="Index" asp-route-order="Name" asp-route-search="@ViewData["search"]" asp-route-sort="@ViewData["sort"]" class="btn btn-link">Name</a>
            </th>
            <th>
                Desc
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
       

            @foreach (var item in Model.Foods)
            {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Maden</td>
            <td>
                <div>
                    <a class="btn btn-info" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                    <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </td>

        </tr>

            }

</tbody>
</table>

@section Scripts{
<script>
    $(document).ready(function () {
        $("#madenid").val("@ViewData["maden"]");
    })
</script>
}